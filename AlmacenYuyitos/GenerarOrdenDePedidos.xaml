<mah:MetroWindow x:Class="AlmacenYuyitos.GenerarOrdenDePedidos"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlmacenYuyitos"
        mc:Ignorable="d"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Generar Orden DePedidos" Height="405.912" Width="800" ResizeMode="NoResize" Icon="resources/logo.png">
    <!--Inicio menu izquierda inicio de sesion-->
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl x:Name="ControlesFlyouts">
            <mah:Flyout x:Name="cuentaFlyouts"
                                 Position="Top"
                                 IsPinned="False"
                                 IsOpen="false"
                                 AnimateOnPositionChange="False"
                                 AnimateOpacity="True"
                                 IsModal="False"
                                 Theme="Dark"
                                 ExternalCloseButton="Left"
                                 CloseButtonVisibility="Hidden"
                                 TitleVisibility="Hidden"
                                 AreAnimationsEnabled="True"
                                 Width="150"
                                 Height="75"
                                 Margin="550, 28, 0, 0">
                <Grid Width="150">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="btnCerrarSesion"
                                    Height="40" Width="110" Cursor="Hand"
                                    Margin="10,10, 0,0" 
                                    Content="Cerrar Sesión" Click="btnCerrarSesion_Click">
                        </Button>
                    </StackPanel>

                </Grid>

            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <!--Inicio menu derecha-->
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="Bienvenido/a" Cursor="Hand" x:Name="btnCuenta" Click="btnCuenta_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22"
                                    Height="22"
                                    VerticalAlignment="Center"
                                    Kind="User"/>
                            <TextBlock Margin="4, 0, 0, 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid Background="LightBlue">
        <Label Content="ID Orden de Pedido:" HorizontalAlignment="Left" Margin="92,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Nombre Servidor:" HorizontalAlignment="Left" Margin="105,140,0,0" VerticalAlignment="Top"/>
        <Label Content="Teléfono Servidor:" HorizontalAlignment="Left" Margin="103,171,0,0" VerticalAlignment="Top"/>
        <Label Content="Proveedor:" HorizontalAlignment="Left" Margin="141,202,0,0" VerticalAlignment="Top"/>
        <Label Content="Productos:" HorizontalAlignment="Left" Margin="143,228,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtIdOrdenPedidos" HorizontalAlignment="Left" Height="23" Margin="232,109,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" KeyDown="txtIdOrdenPedidos_KeyDown"/>
        <TextBox x:Name="txtNombreServidor" HorizontalAlignment="Left" Height="23" Margin="232,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="txtNombreServidor_PreviewTextInput"/>
        <TextBox x:Name="txtTelefonoServidor" HorizontalAlignment="Left" Height="23" Margin="232,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.453,0.055" KeyDown="txtTelefonoServidor_KeyDown"/>
        <ComboBox x:Name="cboProveedor" HorizontalAlignment="Left" Margin="232,202,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Fecha de Orden de Pedido:" HorizontalAlignment="Left" Margin="449,109,0,0" VerticalAlignment="Top"/>
        <Label Content="Estado de Orden de Pedidos:" HorizontalAlignment="Left" Margin="439,140,0,0" VerticalAlignment="Top"/>
        <Label Content="Monto Total:" HorizontalAlignment="Left" Margin="525,171,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpFechaOrdenPedido" HorizontalAlignment="Left" Margin="608,109,0,0" VerticalAlignment="Top" Width="111"/>
        <ComboBox x:Name="cboEstadoOrden" HorizontalAlignment="Left" Margin="608,140,0,0" VerticalAlignment="Top" Width="111"/>
        <TextBox x:Name="txtMontoTotal" HorizontalAlignment="Left" Height="23" Margin="625,171,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="94" KeyDown="txtMontoTotal_KeyDown"/>
        <Button x:Name="btnGuardarOrdenPedido" Content="GUARDAR ORDEN DE PEDIDO" HorizontalAlignment="Left" Margin="232,340,0,0" VerticalAlignment="Top" Width="161"/>
        <Button x:Name="btnAtras" Content="ATRÁS" HorizontalAlignment="Left" Margin="644,340,0,0" VerticalAlignment="Top" Width="75" Click="btnAtras_Click"/>
        <Image Source="/resources/logo.png" Width="120" Height="120" Margin="352,-11,321.6,267" />

    </Grid>
</mah:MetroWindow>
