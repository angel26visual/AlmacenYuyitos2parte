<mah:MetroWindow x:Class="AlmacenYuyitos.IngresarRecepcion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AlmacenYuyitos"
        mc:Ignorable="d"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        Title="Ingresar Recepcion - Los Yuyitos" Height="503.209" Width="800" ResizeMode="NoResize" Icon="resources/logo.png">
    <!--Inicio menu izquierda inicio de sesion-->
    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl x:Name="ControlesFlyouts">
            <mah:Flyout x:Name="cuentaFlyouts"
                                 Position="Top"
                                 IsPinned="False"
                                 IsOpen="false"
                                 AnimateOnPositionChange="False"
                                 AnimateOpacity="True"
                                 IsModal="False"
                                 Theme="Dark"
                                 ExternalCloseButton="Left"
                                 CloseButtonVisibility="Hidden"
                                 TitleVisibility="Hidden"
                                 AreAnimationsEnabled="True"
                                 Width="150"
                                 Height="75"
                                 Margin="550, 28, 0, 0">
                <Grid Width="150">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="btnCerrarSesion"
                                    Height="40" Width="110" Cursor="Hand"
                                    Margin="10,10, 0,0" 
                                    Content="Cerrar Sesión" Click="btnCerrarSesion_Click">
                        </Button>
                    </StackPanel>

                </Grid>

            </mah:Flyout>
        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <!--Inicio menu derecha-->
    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="Bienvenido/a" Cursor="Hand" x:Name="btnCuenta" Click="btnCuenta_Click">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconModern Width="22"
                                    Height="22"
                                    VerticalAlignment="Center"
                                    Kind="User"/>
                            <TextBlock Margin="4, 0, 0, 0"
                                       VerticalAlignment="Center"
                                       Text="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <Grid Background="LightBlue">
        <Button x:Name="btnAtras" Content="ATRÁS" HorizontalAlignment="Left" Margin="709,430,0,9.6" Width="75" Click="btnAtras_Click"/>
        <Label Content="RECEPCIÓN DE ORDEN DE PEDIDOS" HorizontalAlignment="Left" Margin="260,83,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Image Source="/resources/logo.png" Margin="350,-5,350.6,390.6" />
        <Label Content="RECEPCIÓN" HorizontalAlignment="Left" Margin="31,115,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <Label Content="ID Orden de Pedido:" HorizontalAlignment="Left" Margin="31,152,0,0" VerticalAlignment="Top"/>
        <Label Content="Proveedor:" HorizontalAlignment="Left" Margin="80,183,0,0" VerticalAlignment="Top"/>
        <Label Content="Productos Pedidos:" HorizontalAlignment="Left" Margin="37,214,0,0" VerticalAlignment="Top"/>
        <Label Content="Valor Pagado($):" HorizontalAlignment="Left" Margin="51,306,0,0" VerticalAlignment="Top"/>
        <Label Content="ORDEN DE PEDIDOS" HorizontalAlignment="Left" Margin="477,115,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="16"/>
        <TextBox x:Name="txtIdOrdenPedidoR" HorizontalAlignment="Left" Height="23" Margin="153,152,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cboProveedorR" HorizontalAlignment="Left" Margin="153,183,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtValorPagado" HorizontalAlignment="Left" Height="23" Margin="153,306,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="ID Orden de Pedido:" HorizontalAlignment="Left" Margin="483,160,0,0" VerticalAlignment="Top"/>
        <Label Content="Proveedor:" HorizontalAlignment="Left" Margin="532,191,0,0" VerticalAlignment="Top"/>
        <Label Content="Productos Pedidos:" HorizontalAlignment="Left" Margin="489,222,0,0" VerticalAlignment="Top"/>
        <Label Content="Valor($) :" HorizontalAlignment="Left" Margin="544,314,0,0" VerticalAlignment="Top"/>
        <Label x:Name="txtValorPagadoO" Content="" HorizontalAlignment="Left" Margin="605,314,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.175,-0.119" Width="96"/>
        <Label x:Name="txtIdOrdenPedidoO" Content="" HorizontalAlignment="Left" Margin="605,160,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cboProveedorO" HorizontalAlignment="Left" Margin="605,191,0,0" VerticalAlignment="Top" Width="120"/>
        <Label Content="Fecha de Emisión:" HorizontalAlignment="Left" Margin="496,345,0,0" VerticalAlignment="Top"/>
        <Label Content="Estado:" HorizontalAlignment="Left" Margin="552,383,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpFechaEmision" HorizontalAlignment="Left" Margin="605,345,0,0" VerticalAlignment="Top" Width="96"/>
        <ComboBox x:Name="cboEstado" HorizontalAlignment="Left" Margin="605,383,0,0" VerticalAlignment="Top" Width="96"/>
        <Button x:Name="btnVerificarRecepcion" Content="VERIFICAR RECEPCIÓN" HorizontalAlignment="Left" Margin="10,409,0,0" VerticalAlignment="Top" Width="124"/>
        <Button x:Name="btnTerminarRecepcion" Content="TERMINAR RECEPCIÓN" HorizontalAlignment="Left" Margin="139,409,0,0" VerticalAlignment="Top" Width="134"/>

    </Grid>
</mah:MetroWindow>
