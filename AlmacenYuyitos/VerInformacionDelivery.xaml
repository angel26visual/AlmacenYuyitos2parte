        <TextBox x:Name="txtNumeroDeBoleta" HorizontalAlignment="Left" Height="23" Margin="210,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="dpFechaDePedido" HorizontalAlignment="Left" Margin="210,174,0,0" VerticalAlignment="Top" Width="120"/>
