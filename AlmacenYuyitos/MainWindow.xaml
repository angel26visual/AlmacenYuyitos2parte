            <Image Source="/resources/ControlarRecepciones.png" Height="137" Width="160" />
            <Button.Effect>
                <DropShadowEffect/>
            </Button.Effect>
        </mah:Tile>
        <Image Source="/resources/GestionUsuarios.png" Margin="-404,93,1641.4,296.8" />

    </Grid>
</mah:MetroWindow>
